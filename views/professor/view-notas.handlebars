{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<table class="table">
  <thead class="table-primary">
    <tr>
      <th scope="col">Codigo</th>
      <th scope="col">Nome</th>
      <th scope="col">ID</th>
      <th scope="col">Notas</th>
    </tr>
  </thead>
  <tbody>
    {{#each materias}}
    <tr>
      <th scope="row">{{codigo}}</th>
      <td>{{titulo}}</td>
      <td>{{_id}}</td>
      <td><a href="/professor/materias/notas/edit/{{_id}}">
          <button class="btn btn-secondary">
            <i class="far fa-edit"></i>
            Notas
          </button>
        </a></td>
    </tr>
    {{else}}
    <p>Nenhuma materias registrada!</p>
    {{/each}}
  </tbody>
</table>