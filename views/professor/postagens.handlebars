<h2>Lista de Postagens:</h2>
<hr>
<a href="/professor/postagens/add"><button type="button" class="btn btn-success">Adicionar nova postagem ao mural
  </button></a>

{{#each postagens}}
<div class="card mt-4">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <h5 class="text-muted">Conteudo:</h5>
    <h6>{{conteudo}}</h6>
    <small>Data de criação: {{date}}</small><br>
    <a href="/professor/postagens/edit/{{_id}}"><button type="button" class="btn btn-outline-success mt-4">Editar
        a postagem</button></a>
    <form action="/professor/postagens/deletar/" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-outline-danger mt-2">Deletar postagem </button>
    </form>
  </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma postagem adcionado: </h4>
{{/each}}