{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Nova Postagem</h4>
    <form action="/professor/postagens/nova" method="POST">
      <label for="titulo">Título: </label>
      <input type="text" name="titulo" class="form-control">
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control">
      <label for="topico">topico: </label>
      <input type="text" name="topico" class="form-control">
      <label for="conteudo">Conteúdo: </label>
      <textarea name="conteudo" class="form-control"></textarea>
      <label for="materia">materia: </label>
      <select name="materia" class="custom-select">
        {{#each materias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0">Nenhuma Materia registrada</option>
        {{/each}}
      </select>
      <br>

      <button class="btn btn-outline-success mt-4" type="submit">Adicionar Postagem</button>
    </form>
  </div>
</div>