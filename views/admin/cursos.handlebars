<h2>Lista de Cursos:</h2>
<hr>
<a href="/admin/cursos/add"><button type="button" class="btn btn-success">Adcionar novo curso</button></a>

{{#each cursos}}
<div class="card mt-4">
  <div class="card-body">
    <h3>{{nome}}</h3>
    <h5 class="text-muted">Descrição do Curso:</h5>
    <h6>{{descricao}}</h6>
    <small>Slug: {{slug}}</small><br>
    <small>Data de criação: {{date}}</small><br>
    <a href="/admin/cursos/edit/{{_id}}"><button type="button" class="btn btn-outline-success mt-4">Editar</button></a>
    <form action="/admin/cursos/deletar/" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-outline-danger mt-2">Deletar</button>
    </form>
  </div>
</div>
{{else}}
<h4 class="mt-3">Nenhum curso adcionado: </h4>
{{/each}}