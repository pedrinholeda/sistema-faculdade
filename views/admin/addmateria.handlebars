{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Nova Materia</h4>
    <form action="/admin/materias/nova" method="POST">
      <label for="titulo">Título: </label>
      <input type="text" name="titulo" class="form-control">
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control">
      <label for="descricao">Descrição: </label>
      <input type="text" name="descricao" class="form-control">
      <label for="conteudo">Conteúdo: </label>
      <textarea name="conteudo" class="form-control"></textarea>
      <label for="curso">Curso: </label>
      <select name="curso" class="custom-select">
        {{#each cursos}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0">Nenhum curso registrada</option>
        {{/each}}
      </select>
      <button class="btn btn-outline-success mt-4" type="submit">Criar Materia</button>
    </form>
  </div>
</div>