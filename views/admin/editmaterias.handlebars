{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar materia</h4>
    <form action="/admin/materia/edit" method="POST">
      <input type="hidden" value="{{materia._id}}" name="id">
      <label for="titulo">Título: </label>
      <input type="text" name="titulo" class="form-control" value="{{materia.titulo}}">
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control" value="{{materia.slug}}">
      <label for="descricao">Descrição: </label>
      <input type="text" name="descricao" class="form-control" value="{{materia.descricao}}">
      <label for="conteudo">Conteúdo: </label>
      <textarea name="conteudo" class="form-control">{{materia.conteudo}} </textarea>
      <label for="curso">Curso: </label>
      <select name="curso" class="custom-select">
        {{#each cursos}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0">Nenhuma curso registrada</option>
        {{/each}}
      </select>
      <button class="btn btn-outline-success mt-4" type="submit">Editar materia</button>
    </form>
  </div>
</div>