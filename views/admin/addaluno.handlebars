{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
  <div class="card-body">
    <h4>Adicionar alunos:</h4>
    <form action="/admin/materias/addaluno" method="POST">
      <input type="hidden" value="{{materia._id}}" name="id">
      <label for="matricula">Alunos: </label>
      <select name="matricula" class="custom-select">
        {{#each usuarios}}
        <option value="{{_id}}">{{_id}}</option>
        {{else}}
        <option value="0">Nenhum usuario encontrado</option>
        {{/each}}
      </select>
      <label for="semestre">Semestre: </label>
      <select name="semestre" class="custom-select form-control">
        <option value="2020.1">2020.1</option>
        <option value="2020.2">2020.2</option>
      </select>
      <button class="btn btn-success mt-2" type="submit">
        <i class="fas fa-plus"></i> Adicionar aluno
      </button>
    </form>
  </div>
</div>