<div class="row">
  <div class="col-md-4">
    <div class="profile-img">
      <img src="https://i.imgur.com/Iar09zy.png " alt="" />
      <div class="file btn btn-lg btn-primary">
        Change Photo
        <input type="file" name="file" />
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="profile-head">
      <h3>
        {{usuario.nome}}
      </h3>
      <h6>
        {{usuario.profissao}}
      </h6>
      {{!-- <p class="proile-rating">RANKINGS : <span>8/10</span></p> --}}

    </div>
  </div>
</div>


<form action="/usuarios/user/edit" method="POST">
  <input type="hidden" value="{{materia._id}}" name="id">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"></div>
  <br>
  <div class="row">
    <div class="col-md-6">
      <label>Matricula:</label>
    </div>
    <div class="col-md-6">
      <p><strong>{{usuario.id}} </strong></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label>Nome Completo:</label>
    </div>
    <div class="col-md-6">
      <input type="text" name="nome" class="form-control" value="{{usuario.nome}}">
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label>Email:</label>
    </div>
    <div class="col-md-6">
      <input type="text" name="nome" class="form-control" value="{{usuario.email}}">
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label>Telefone: </label>
    </div>
    <div class="col-md-6">
      <input type="text" name="nome" class="form-control" value="{{usuario.telefone}}">
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label>Profissão:</label>
    </div>
    <div class="col-md-6">
      <input type="text" name="nome" class="form-control" value="{{usuario.profissao}}">
    </div>
  </div>
  <br>
  <br>
  <center><button class="btn btn-outline-success mt-4" type="submit">Salvar Alterações</button></center>
</form>


